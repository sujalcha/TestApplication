<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.MainActivity" android:layout_margin="10dp">

    <TextView
        android:text="User Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"
        android:textColor="@color/blue" android:textSize="24sp" android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/userlistview"
        android:divider="@android:color/transparent" android:dividerHeight="10dp"/>

</LinearLayout>