<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dp" android:layout_margin="10dp"
        android:id="@+id/userlayout" android:background="@color/blue">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="1" android:layout_gravity="center">
        <TextView
                android:text="User ID : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                android:textColor="@color/white"/>
        <TextView
                android:text="User ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/userid" android:layout_weight="1"
                android:layout_gravity="center" android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="User Name : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                android:textColor="@color/white"/>
        <TextView
                android:text="User Name: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/username" android:layout_weight="1"
                android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="User Email : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"
                android:textColor="@color/white"/>
        <TextView
                android:text="User Email: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/useremail" android:layout_weight="1"
                android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="User Number : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0"
                android:textColor="@color/white"/>
        <TextView
                android:text="User Number: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/userphone" android:layout_weight="1"
                android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>


