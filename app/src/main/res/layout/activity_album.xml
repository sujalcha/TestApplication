<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Album" android:orientation="vertical" android:layout_margin="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center">
        <TextView
            android:text="ALBUM ID :" android:id="@+id/textView2" android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center"
            android:textColor="@color/blue" android:textSize="24sp" android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:text="Null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/albumid"
            android:layout_gravity="center|center_horizontal" android:gravity="center"
            android:textColor="@color/blue" android:textSize="24sp" android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/albumlist" android:dividerHeight="10dp"
        android:divider="@android:color/transparent"/>
</LinearLayout>